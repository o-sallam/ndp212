<%- include('partials/header') %>

    <style>
        /* Admin specific styles to blend with the main theme */
        body {
            align-items: flex-start;
            height: auto;
            min-height: 100vh;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        .admin-container {
            background: rgba(34, 34, 34, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 600px;
            /* Slightly wider for form */
            margin: 0 auto;
            border: 1px solid #444;
            text-align: right;
            /* Ensure form labels are RTL */
        }

        h1.admin-title {
            text-align: center;
            margin-bottom: 30px;
            color: #FFD700;
            font-size: 2rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #e0e0e0;
        }

        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #555;
            border-radius: 8px;
            background: #222;
            color: #fff;
            font-family: 'Cairo', sans-serif;
            font-size: 1rem;
        }

        input[type="text"]:focus,
        textarea:focus,
        select:focus {
            border-color: #FFD700;
            outline: none;
            box-shadow: 0 0 5px rgba(255, 215, 0, 0.3);
        }

        textarea {
            height: 120px;
            resize: vertical;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            background: #2a2a2a;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #444;
        }

        .checkbox-group input {
            width: 20px;
            height: 20px;
            accent-color: #FFD700;
        }

        .checkbox-group label {
            margin-bottom: 0;
            cursor: pointer;
        }

        .radio-group {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
        }

        .radio-group label {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            font-weight: normal;
        }

        .radio-group input[type="radio"] {
            accent-color: #FFD700;
            width: 18px;
            height: 18px;
        }

        button.save-btn {
            background: #FFD700;
            color: #000;
            border: none;
            padding: 14px 24px;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            margin-top: 20px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        button.save-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
            background: #e6c200;
        }

        .admin-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            border-top: 1px solid #444;
            padding-top: 20px;
        }

        .admin-link {
            color: #aaa;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.2s;
        }

        .admin-link:hover {
            color: #fff;
        }
    </style>

    <div class="admin-container">
        <h1 class="admin-title">لوحة التحكم</h1>
        <form action="/admin/update" method="POST">

            <!-- Logo Section -->
            <div class="form-group">
                <label>نوع الشعار</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="logoType" value="text" <%=data.logoType !=='image' ? 'checked' : '' %>
                        onclick="toggleLogoUrl(false)">
                        نص (NDB212)
                    </label>
                    <label>
                        <input type="radio" name="logoType" value="image" <%=data.logoType==='image' ? 'checked' : '' %>
                        onclick="toggleLogoUrl(true)">
                        صورة (PNG)
                    </label>
                </div>
            </div>

            <div class="form-group" id="logoUrlGroup"
                style="display: <%= data.logoType === 'image' ? 'block' : 'none' %>;">
                <label>رابط الصورة (URL)</label>
                <input type="text" name="logoUrl" value="<%= data.logoUrl || '' %>"
                    placeholder="https://example.com/logo.png">
            </div>

            <div class="form-group">
                <label>العنوان الرئيسي (H1)</label>
                <input type="text" name="mainTitle" value="<%= data.mainTitle %>" required>
            </div>

            <div class="form-group">
                <label>العنوان الفرعي (H2)</label>
                <input type="text" name="subTitle" value="<%= data.subTitle %>">
            </div>

            <div class="form-group">
                <label>الوصف</label>
                <textarea name="description" required><%= data.description %></textarea>
            </div>

            <div class="form-group">
                <label>نص الزر</label>
                <input type="text" name="ctaText" value="<%= data.ctaText %>">
            </div>

            <div class="form-group">
                <label>رابط الزر</label>
                <input type="text" name="ctaLink" value="<%= data.ctaLink %>">
            </div>

            <div class="form-group checkbox-group">
                <input type="checkbox" name="ctaVisible" id="ctaVisible" <%=data.ctaVisible ? 'checked' : '' %>>
                <label for="ctaVisible">إظهار الزر</label>
            </div>

            <button type="submit" class="save-btn">حفظ التغييرات</button>
        </form>

        <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #444;">
            <h2 style="color: #FFD700; font-size: 1.5rem; margin-bottom: 20px;">تغيير بيانات الدخول</h2>
            <form action="/admin/update-credentials" method="POST">
                <div class="form-group">
                    <label>اسم المستخدم الجديد</label>
                    <input type="text" name="newUsername" placeholder="اسم المستخدم الجديد" required>
                </div>
                <div class="form-group">
                    <label>كلمة المرور الجديدة</label>
                    <input type="text" name="newPassword" placeholder="كلمة المرور الجديدة" required>
                </div>
                <button type="submit" class="save-btn" style="background: #444; color: #fff;">تحديث البيانات</button>
            </form>
        </div>

        <div class="admin-actions">
            <a href="/logout" class="admin-link">تسجيل الخروج</a>
            <a href="/" class="admin-link" target="_blank">معاينة الموقع ↗</a>
        </div>
    </div>

    <script>
        function toggleLogoUrl(show) {
            document.getElementById('logoUrlGroup').style.display = show ? 'block' : 'none';
        }
    </script>

    <%- include('partials/footer') %>